generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model answers {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  answer     String
  questionId String @db.ObjectId
  userId     String @db.ObjectId
}

model questions {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  desc   String
  title  String
  userId String @db.ObjectId
}

model users {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String
  password String
  username String
}
