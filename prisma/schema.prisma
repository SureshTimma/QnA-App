generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model answers {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  answer     String
  likes      BigInt
  questionId String    @db.ObjectId
  userId     String    @db.ObjectId
  user       users     @relation(fields: [userId], references: [id])
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
}

model questions {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  desc      String
  title     String
  topics    String[]
  userId    String    @db.ObjectId
  user      users     @relation(fields: [userId], references: [id])
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}

model topics {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  topicName String
}

model users {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  password  String
  username  String
  questions questions[]
  answers   answers[]
}
